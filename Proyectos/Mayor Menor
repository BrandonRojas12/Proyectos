#include<iostream>

using namespace std;

int main()
{
	int  n1,n2,n3,my,mn,cn;
	
	cout<<"escriba el primer numero:";
	cin>>n1;
	
	cout<<"escriba el segundo numero:";
	cin>>n2;
	
	
	cout<<"escriba el tercer numero:";
	cin>>n3;
	
	
	
	if (n1>n2){
		
		my=n1;
		mn=n2;
	}
	
	else {
		
		my=n2;
		mn=n1;
		
	}
	if(my>n3){
		if(mn>n3){
			cn=mn;
			mn=n3;
		}
		else{
			
			cn=mn;
		}
		
	}
	else{
		cn=my;
		my=n3;
		
	}
		cout<<"el mayor es:"<<my<<","<<"el central es:"<<cn<<","<<"el menor es"<<mn<<"\n";
	system ("pause");
	return 0;
	
}
