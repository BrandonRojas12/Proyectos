CREATE DATABASE BGAR_PRIMER_EJERCICIO;
USE BGAR_PRIMER_EJERCICIO

CREATE TABLE BGAR_CLIENTE(
ID_CLIENTE int NOT NULL PRIMARY KEY,
NOM_CLIENTE varchar (20),
DIR_CLIENTE varchar (30),
CUENTA_BANCARIA varchar (16),
TEL_CLIENTE varchar (10),
);

SELECT *
FROM BGAR_CLIENTE

CREATE TABLE BGAR_MASCOTA(
ID_MASCOTA int NOT NULL PRIMARY KEY,
ALIAS_MASCOTA varchar (15),
ESPECIE_MASCOTA varchar (20),
RAZA_MASCOTA varchar (20),
COLOR_PELO varchar (10),
FECHA_NAC varchar (8),
PESO_MASCOTA float (2),
ID_CLIENTE1 int FOREIGN KEY references BGAR_CLIENTE (ID_CLIENTE)
);

SELECT *
FROM BGAR_MASCOTA

CREATE TABLE BGAR_VETERINARIO(
ID_VETERINARIO int NOT NULL PRIMARY KEY,
NOMBRE_VETERINARIO varchar (40),
CORREO_VETERINARIO varchar (20),
DIR_VETERINARIO varchar (40),
);

SELECT *
FROM BGAR_VETERINARIO

CREATE TABLE BGAR_SERVICIO(
ID_SERVICIO int NOT NULL PRIMARY KEY,
NOMBRE_SERVICIO varchar (30),
DESCRIPCION_SERVICIO varchar (40),
COSTO_SERVICIO float (5),
);

SELECT *
FROM BGAR_SERVICIO

CREATE TABLE BGAR_HISTORIAL(
ID_HISTORIAL int NOT NULL PRIMARY KEY,
FECHA_CITA varchar (15),
FECHA_SEGUIMIENTO varchar (15),
CLAVE_CONSULTA1 int FOREIGN KEY references BGAR_CONSULTA1 (CLAVE_CONSULTA)
);

SELECT *
FROM BGAR_HISTORIAL

CREATE TABLE BGAR_CONSULTA1(
CLAVE_CONSULTA int NOT NULL PRIMARY KEY,
FECHA_CONSULTA varchar (15),
HORA_CONSULTA time (5),
ID_MASCOTA1 int FOREIGN KEY references BGAR_MASCOTA (ID_MASCOTA)
ID_VETERINARIO1 int FOREIGN KEY references BGAR_VETERINARIO (ID_VETERINARIO)
ID_SERVICIO1 int FOREIGN KEY references BGAR_SERVICIO (ID_SERVICIO)
);

SELECT *
fROM BGAR_CONSULTA1

CREATE TABLE BGAR_CLIENTE_FAMILIA(
ID_CLIENTE_1 int FOREIGN KEY references BGAR_CLIENTE (ID_CLIENTE)
NOMBRE_PARIENTE varchar (20),
);

SELECT *
FROM BGAR_CLIENTE_FAMILIA

CREATE TABLE BGAR_VETERINARIO_TELEFONO(
ID_VETERINARIO_2 int FOREIGN KEY references BGAR_VETERINARIO (ID_VETERINARIO)
TEL_VETERINARIO varchar (10),
);

SELECT *
FROM BGAR_VETERINARIO_TELEFONO

CREATE TABLE BGAR_CONSULTA_SERVICIO(
CLAVE_CONSULTA_1 int FOREIGN KEY references BGAR_CONSULTA (CLAVE_CONSULTA)
ID_SERVICIO_2 int FOREIGN KEY references BGAR_SERVICIO (ID_SERVICIO)
);

SELECT *
FROM BGAR_CONSULTA_SERVICIO

